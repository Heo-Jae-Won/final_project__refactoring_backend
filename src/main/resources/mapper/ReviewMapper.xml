<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.ReviewMapper">


	<resultMap id="reviewInfo" type="review">
		<result column="review_regDate" property="reviewRegDate"
			jdbcType="DATE" javaType="java.sql.Date" />
		<result column="review_code" property="reviewCode"
			jdbcType="CHAR" javaType="String" />
		<result column="review_content" property="reviewContent"
			jdbcType="VARCHAR" javaType="String" />
		<result column="review_sender" property="reviewSender"
			jdbcType="VARCHAR" javaType="String" />
		<result column="review_receiver" property="reviewReceiver"
			jdbcType="VARCHAR" javaType="String" />
		<result column="review_point" property="reviewPoint"
			jdbcType="DOUBLE" javaType="double" />
		<result column="pay_code" property="payCode" jdbcType="CHAR"
			javaType="String" />
	</resultMap>


	<select id="list" resultMap="reviewInfo">
		select * from tbl_review
		where
		receiver=#{receiver}
		order by regDate
		limit #{start},#{num}

	</select>

	<select id="read" resultMap="reviewInfo">
		select * from tbl_review where
		receiver=#{receiver}
	</select>

	<insert id="insert">
		insert into
		tbl_review(rvcode,rvcontent,sender,receiver,paycode,point)
		values(#{rvcode},#{rvcontent},#{sender},#{receiver},#{paycode},#{point})
	</insert>

	<select id="total" resultType="int">
		select count(*) from tbl_review
		where receiver=#{receiver};
	</select>




</mapper>